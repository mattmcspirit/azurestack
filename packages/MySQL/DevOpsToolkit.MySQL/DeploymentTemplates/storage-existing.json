{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "Description": "The name of the existing storage account created to store the VMs disks"
            }
        }
    },
    "variables": {
        "storageAccountResourceGroup": "[resourceGroup().name]"
    },
    "resources": [],
    "outputs": {
        "storageAccountId": {
            "value": "[reference(resourceId(variables('storageAccountResourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2016-01-01')]",
            "type": "string"
        },
        "storageAccountResourceGroupBlah": {
            "type": "string",
            "value": "[variables('storageAccountResourceGroup')]"
        }
    }
}